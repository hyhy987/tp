<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <VBox fx:id="helpMessageContainer" spacing="10">
        <padding>
          <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
        </padding>

        <ScrollPane fitToWidth="true" prefHeight="450.0" prefWidth="500.0">
          <VBox spacing="12">
            <padding>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>

            <!-- Introduction -->
            <Label text="Welcome to FoodBook!" styleClass="header">
              <font>
                <Font name="System Bold" size="16.0" />
              </font>
            </Label>

            <Label text="Here's a quick reference of available commands:" wrapText="true" styleClass="subheader" />

            <!-- Viewing Help -->
            <VBox spacing="5">
              <Label text="• Viewing help : " styleClass="command-category">
                <font>
                  <Font name="System Bold" size="13.0" />
                </font>
              </Label>
              <Label text="   help" styleClass="command-text" />
            </VBox>

            <!-- Clients Section -->
            <VBox spacing="5">
              <Label text="• Clients" styleClass="command-category">
                <font>
                  <Font name="System Bold" size="13.0" />
                </font>
              </Label>
              <Label text="   Listing all clients : list_client" styleClass="command-text" />
              <Label text="   Adding a client : add_client" styleClass="command-text" />
              <Label text="   Editing a client : edit_client" styleClass="command-text" />
              <Label text="   Locating clients : find_client" styleClass="command-text" />
              <Label text="   Deleting a client : delete_client" styleClass="command-text" />
            </VBox>

            <!-- Deliveries Section -->
            <VBox spacing="5">
              <Label text="• Deliveries" styleClass="command-category">
                <font>
                  <Font name="System Bold" size="13.0" />
                </font>
              </Label>
              <Label text="   Listing all deliveries : list_delivery" styleClass="command-text" />
              <Label text="   Adding a delivery : add_delivery" styleClass="command-text" />
              <Label text="   Editing a delivery : edit_delivery" styleClass="command-text" />
              <Label text="   Marking / Unmarking : mark / unmark" styleClass="command-text" />
              <Label text="   Locating deliveries : find_delivery" styleClass="command-text" />
              <Label text="   Deleting a delivery : delete_delivery" styleClass="command-text" />
            </VBox>

            <!-- Other Commands -->
            <VBox spacing="5">
              <Label text="• Revenue : " styleClass="command-category">
                <font>
                  <Font name="System Bold" size="13.0" />
                </font>
              </Label>
              <Label text="   list_revenue" styleClass="command-text" />
            </VBox>

            <VBox spacing="5">
              <Label text="• Undo : " styleClass="command-category">
                <font>
                  <Font name="System Bold" size="13.0" />
                </font>
              </Label>
              <Label text="   undo" styleClass="command-text" />
            </VBox>

            <VBox spacing="5">
              <Label text="• Clearing all entries : " styleClass="command-category">
                <font>
                  <Font name="System Bold" size="13.0" />
                </font>
              </Label>
              <Label text="   clear" styleClass="command-text" />
            </VBox>

            <VBox spacing="5">
              <Label text="• Exiting the program : " styleClass="command-category">
                <font>
                  <Font name="System Bold" size="13.0" />
                </font>
              </Label>
              <Label text="   exit" styleClass="command-text" />
            </VBox>

          </VBox>
        </ScrollPane>

        <!-- Bottom section with hyperlink and copy button -->
        <HBox alignment="CENTER" spacing="0">
          <Label text="For more details, refer to the " styleClass="hyperlink-text"/>
          <Hyperlink fx:id="userGuideLink" text="User Guide" onAction="#openUserGuide" />
        </HBox>

        <HBox alignment="CENTER">
          <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL">
            <HBox.margin>
              <Insets left="5.0" />
            </HBox.margin>
          </Button>
        </HBox>

      </VBox>
    </Scene>
  </scene>
</fx:root>
